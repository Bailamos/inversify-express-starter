{
  "name": "lessons-booking",
  "version": "1.0.0",
  "description": "",
  "author": "Szymon Kaczorowski",
  "type": "module",
  "main": "index.ts",
  "scripts": {
    "build": "tsc",
    "dev": "npm run build && npm run scss && npm run copy-views && npm run copy-public && node --experimental-specifier-resolution=node ./dist/index.js",
    "start": "nodemon -e ts,css,js,njk,json,scss --watch src --delay 1 --exec \"npm run dev\"",
    "test": "jest --detectOpenHandles",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "scss": "sass src/scss/main.scss public/styles/main.css -q",
    "copy-views": "cp -ru src/views dist",
    "copy-public": "rm -r dist/public; mv public dist",
    "kysely:migrate-make": "kysely migrate:make",
    "kysely:migrate": "kysely migrate up",
    "kysely:rollback": "kysely migrate:rollback --all",
    "kysley:generate-types": "kysely-codegen --out-file ./src/db/db.d.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@stylistic/eslint-plugin-js": "^4.4.1",
    "@types/cookie-parser": "^1.4.10",
    "@types/cookie-session": "^2.0.49",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/nunjucks": "^3.2.6",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "kysely-codegen": "^0.19.0",
    "kysely-ctl": "^0.19.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.3",
    "sass": "^1.94.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0"
  },
  "dependencies": {
    "body-parser": "^2.2.1",
    "bootstrap": "^5.3.8",
    "cookie-parser": "^1.4.7",
    "cookie-session": "^2.1.1",
    "csrf-csrf": "^4.0.3",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "helmet": "^8.1.0",
    "inversify": "^6.2.2",
    "inversify-express-utils": "^6.5.0",
    "kysely": "^0.28.8",
    "nunjucks": "^3.2.4",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2"
  }
}
